<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonalAgent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/devil_blue</item>
        <item name="colorPrimaryVariant">@color/devil_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/devil_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/midnight_blue</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:buttonTint">@color/devil_blue</item>
    </style>

    <style name="Base.Widget.PersonalAgent.Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="backgroundTint">@color/devil_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>